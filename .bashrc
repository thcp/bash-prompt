TXTRST='\[\e[0m\]'
export CLICOLOR=1
PS1='\[\033[0;32m\]\[\033[0m\033[0;32m\]\u\[\033[0;36m\] @ \w\[\033[0;32m\]$(custom_prompt)\[\033[0;32m\]\n└─\[\033[0m\033[0;32m\] \$\[\033[0m\033[0;32m\]\[\033[0m\] '

